/* 选项卡 */
.calendar-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}
.course-list-container {
  margin: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.list-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 20rpx;
}
.course-list .course-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.course-list .course-item:last-child {
  border-bottom: none;
}
.course-list .course-item .course-time {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}
.course-list .course-item .course-info {
  flex: 1;
}
.course-list .course-item .course-info .course-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.course-list .course-item .course-info .course-detail {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.course-list .course-item .course-info .course-detail .teacher {
  margin-right: 20rpx;
}
.course-list .course-item .course-info .course-status {
  display: inline-block;
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.course-list .course-item .course-info .course-status.status-pending {
  background-color: #e6f7ff;
  color: #1890ff;
}
.course-list .course-item .course-info .course-status.status-confirmed {
  background-color: #f6ffed;
  color: #52c41a;
}
.course-list .course-item .course-info .course-status.status-cancelled {
  background-color: #fff2f0;
  color: #ff4d4f;
}
.course-list .course-item .course-info .course-status.status-finished {
  background-color: #f0f0f0;
  color: #999;
}
.empty-tip {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
}
.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.calendar-legend {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 10rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.calendar-legend .legend-item {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}
.calendar-legend .legend-item .legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.calendar-legend .legend-item .legend-dot.has-course {
  background-color: #FF6B00;
}
.calendar-legend .legend-item .legend-dot.today {
  background-color: #007AFF;
}
.calendar-legend .legend-item .legend-dot.selected {
  background-color: #4CD964;
}
.calendar-legend .legend-item text {
  font-size: 24rpx;
  color: #666;
}
:deep(.uni-calendar-item__weeks-box-item) {
  position: relative;
}
:deep(.uni-calendar-item__weeks-box-item).uni-calendar-item--checked {
  background-color: rgba(76, 217, 100, 0.2);
}
:deep(.uni-calendar-item__weeks-box-item).uni-calendar-item--checked .uni-calendar-item__weeks-box-circle {
  background-color: #4CD964;
}
:deep(.uni-calendar-item__weeks-box-item).uni-calendar-item--today {
  background-color: rgba(0, 122, 255, 0.1);
}
:deep(.uni-calendar-item__weeks-box-item).uni-calendar-item--today .uni-calendar-item__weeks-box-circle {
  background-color: #007AFF;
}
:deep(.uni-calendar-item__weeks-box-item).uni-calendar-item--disable {
  opacity: 0.4;
}
:deep(.uni-calendar-item__weeks-box-item) .uni-calendar-item__weeks-box-text {
  font-size: 28rpx;
}
:deep(.uni-calendar-item__weeks-box-item) .uni-calendar-item__weeks-lunar {
  font-size: 20rpx;
  color: #666;
}
:deep(.uni-calendar-item__weeks-box-item) .uni-calendar-item__weeks-box-dot {
