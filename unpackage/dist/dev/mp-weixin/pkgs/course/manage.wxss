/* 选项卡 */
.course-management-wrapper {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}
.course-management-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.course-management-container .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.course-management-container .header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.course-management-container .header .add-btn {
  background-color: #EC7A49;
  color: #fff;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  border: none;
  line-height: 1;
}
.course-management-container .filter-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.course-management-container .filter-section .search-box {
  display: flex;
  align-items: center;
  background-color: #f8f8f8;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}
.course-management-container .filter-section .search-box .search-input {
  flex: 1;
  height: 60rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
}
.course-management-container .filter-section .filter-tabs {
  display: flex;
  border-bottom: 1px solid #eee;
}
.course-management-container .filter-section .filter-tabs .tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.course-management-container .filter-section .filter-tabs .tab-item.active {
  color: #EC7A49;
  font-weight: bold;
}
.course-management-container .filter-section .filter-tabs .tab-item.active:after {
  content: "";
  position: absolute;
  bottom: -1px;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #EC7A49;
  border-radius: 2rpx;
}
.course-management-container .course-list .course-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.course-management-container .course-list .course-item .course-info {
  margin-bottom: 20rpx;
}
.course-management-container .course-list .course-item .course-info .course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}
.course-management-container .course-list .course-item .course-info .course-details {
  display: flex;
  flex-wrap: wrap;
}
.course-management-container .course-list .course-item .course-info .course-details .detail-item {
  width: 50%;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
}
.course-management-container .course-list .course-item .course-info .course-details .detail-item .label {
  color: #999;
}
.course-management-container .course-list .course-item .course-info .course-details .detail-item .status.online {
  color: #67C23A;
}
.course-management-container .course-list .course-item .course-info .course-details .detail-item .status.offline {
  color: #909399;
}
.course-management-container .course-list .course-item .course-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}
.course-management-container .course-list .course-item .course-actions .action-buttons {
  display: flex;
  justify-content: flex-end;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn {
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.edit-btn {
  color: #409EFF;
  border: 1px solid #409EFF;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.schedule-btn {
  color: #8957E5;
  border: 1px solid #8957E5;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.preview-btn {
  background-color: #8a2be2;
  /* 紫色 */
  color: #fff;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.publish-btn {
  color: #67C23A;
  border: 1px solid #67C23A;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.unpublish-btn {
  color: #E6A23C;
  border: 1px solid #E6A23C;
}
.course-management-container .course-list .course-item .course-actions .action-buttons .btn.delete-btn {
  color: #F56C6C;
  border: 1px solid #F56C6C;
}
.course-management-container .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}
.course-management-container .empty-state .empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.course-management-container .empty-state .empty-text {
  font-size: 28rpx;
  color: #999;
}
/* 日程预览模态框 */
.schedule-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.schedule-preview-modal .modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.schedule-preview-modal .modal-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  width: 80%;
  max-width: 600rpx;
  position: relative;
}
.schedule-preview-modal .modal-content .modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.schedule-preview-modal .modal-content .modal-header .modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.schedule-preview-modal .modal-content .modal-header .modal-close {
  font-size: 28rpx;
  color: #999;
  cursor: pointer;
}
.schedule-preview-modal .modal-content .modal-body {
  max-height: 400rpx;
  overflow-y: auto;
}
.schedule-preview-modal .modal-content .modal-body .schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.schedule-preview-modal .modal-content .modal-body .schedule-item .schedule-date {
  font-size: 28rpx;
  color: #333;
}
.schedule-preview-modal .modal-content .modal-body .schedule-item .weekday {
  font-size: 24rpx;
  color: #999;
}
.schedule-preview-modal .modal-content .modal-body .schedule-item .schedule-time {
  font-size: 28rpx;
  color: #666;
}
.schedule-preview-modal .modal-content .modal-body .no-schedules {
  text-align: center;
  padding: 20rpx;
  color: #999;
}
.schedule-preview-modal .modal-content .modal-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
}
.schedule-preview-modal .modal-content .modal-footer .btn-cancel, .schedule-preview-modal .modal-content .modal-footer .btn-confirm {
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.schedule-preview-modal .modal-content .modal-footer .btn-cancel.btn-cancel, .schedule-preview-modal .modal-content .modal-footer .btn-confirm.btn-cancel {
  background-color: #909399;
  color: #fff;
}
.schedule-preview-modal .modal-content .modal-footer .btn-cancel.btn-confirm, .schedule-preview-modal .modal-content .modal-footer .btn-confirm.btn-confirm {
  background-color: #EC7A49;
  color: #fff;
}
