/* 选项卡 */
.image-upload {
  display: flex;
  justify-content: center;
  align-items: center;
}
.image-upload .upload-box {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f8f8;
}
.image-upload .upload-box .iconfont {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.image-upload .upload-box .upload-text {
  font-size: 24rpx;
  color: #999;
}
.image-upload .image-preview {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.image-upload .image-preview .preview-image {
  width: 100%;
  height: 100%;
}
.image-upload .image-preview .image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10rpx 0;
}
.image-upload .image-preview .image-actions .action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.image-upload .image-preview .image-actions .action-btn .iconfont {
  font-size: 32rpx;
  color: #fff;
}
.image-upload .image-preview .image-actions .action-btn .btn-text {
  font-size: 20rpx;
  color: #fff;
}
.image-upload .image-preview .image-actions .upload-loading {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  color: #fff;
}

