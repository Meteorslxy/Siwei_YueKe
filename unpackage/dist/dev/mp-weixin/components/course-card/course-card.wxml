<view data-event-opts="{{[['tap',[['onClick',['$event']]]]]}}" class="{{['course-card',(isFull)?'course-full':'']}}" bindtap="__e"><block wx:if="{{isFull}}"><image class="sold-out-stamp" src="https://mp-a876f469-bab5-46b7-8863-2e7147900fdd.cdn.bspapp.com/icons/已约满-c2.png" mode="aspectFit"></image></block><view class="card-upper"><view class="course-image"><image src="{{course.coverImage||'/static/images/course-default.jpg'}}" mode="aspectFill" data-event-opts="{{[['error',[['handleImageError',['$event']]]]]}}" binderror="__e"></image><block wx:if="{{course.tag}}"><view class="course-tag">{{course.tag}}</view></block><block wx:if="{{isFull}}"><view class="course-full-tag">已约满</view></block></view><view class="course-info"><view class="course-title">{{course.title}}</view><block wx:if="{{course.location}}"><view class="course-detail-row"><view class="course-location"><image class="icon-image" src="https://mp-a876f469-bab5-46b7-8863-2e7147900fdd.cdn.bspapp.com/icons/map.png"></image><text class="location-text">{{course.location}}</text></view><block wx:if="{{course.maxEnroll||course.courseCapacity}}"><view class="enrollment-status"><text class="enrollment-text">{{"名额 "+$root.m0}}</text></view></block></view></block><block wx:if="{{course.startTime}}"><view class="course-detail-row"><view class="course-time"><image class="icon-image" src="https://mp-a876f469-bab5-46b7-8863-2e7147900fdd.cdn.bspapp.com/icons/time.png"></image><text class="time-text">{{$root.m1}}</text></view></view></block></view></view><view class="divider"></view><view class="card-lower"><view class="teacher-info"><image class="teacher-avatar" src="{{$root.m2}}" mode="aspectFill" data-event-opts="{{[['error',[['handleAvatarError',['$event']]]]]}}" binderror="__e"></image><text class="teacher-name">{{course.teacherName}}</text><text class="teacher-title">{{course.teacherTitle||''}}</text></view><view class="price-info"><text class="price-value">{{$root.m3+".00"}}</text></view></view></view>