/* 选项卡 */
.teacher-card {
  display: flex;
  padding: 30rpx;
  margin-bottom: 180rpx;
  background-color: #fff;
  margin-top: -140rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.teacher-card .teacher-avatar {
  width: 230rpx;
  height: 350rpx;
  margin-right: 24rpx;
}
.teacher-card .teacher-avatar .avatar {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.teacher-card .teacher-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.teacher-card .teacher-info .teacher-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.teacher-card .teacher-info .name-subject {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.teacher-card .teacher-info .teacher-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.teacher-card .teacher-info .subject-tag {
  display: inline-block;
  font-size: 24rpx;
  color: #EC7A49;
  background-color: rgba(236, 122, 73, 0.1);
  padding: 4rpx 14rpx;
  border-radius: 4rpx;
}
.teacher-card .teacher-info .intro-section {
  padding-top: 10rpx;
  border-top: 1px dashed #eee;
}
.teacher-card .teacher-info .intro-item {
  margin-bottom: 10rpx;
}
.teacher-card .teacher-info .intro-label {
  font-size: 23rpx;
  color: #333;
  font-weight: 500;
}
.teacher-card .teacher-info .intro-content {
  font-size: 22rpx;
  color: #666;
}
.teacher-card .teacher-info .teacher-desc-list {
  padding-left: 10rpx;
}
.teacher-card .teacher-info .teacher-desc-list .desc-item {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  line-height: 32rpx;
}
.teacher-card .teacher-info .teacher-desc-list .desc-item .bullet {
  color: #EC7A49;
  margin-right: 8rpx;
  flex-shrink: 0;
}

