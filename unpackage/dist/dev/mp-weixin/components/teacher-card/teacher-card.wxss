  --text-color-grey: #666666;
  --text-color-light: #999999;
  /* 背景颜色 */
  --bg-color: #F7F7F7;
  --bg-color-white: #FFFFFF;
  --bg-color-grey: #F2F2F2;
  /* 边框颜色 */
  --border-color: #DDDDDD;
  --border-color-light: #EEEEEE;
  /* 尺寸变量 */
  --uni-size-grid: 8rpx;
