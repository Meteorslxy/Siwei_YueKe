/* 选项卡 */
.teacher-card {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.teacher-card .teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.teacher-card .teacher-avatar .avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.teacher-card .teacher-info {
  flex: 1;
}
.teacher-card .teacher-info .teacher-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}
.teacher-card .teacher-info .teacher-name .teacher-title {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  font-weight: normal;
}
.teacher-card .teacher-info .teacher-school {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.teacher-card .teacher-info .teacher-desc {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

