/* 选项卡 */
.course-container {
  min-height: 100vh;
  background-color: var(--bg-color);
}
/* 顶部背景 */
.header-background {
  width: 100%;
  background-color: #EC7A49;
  /* 与用户页面一致的颜色 */
  padding-bottom: 50rpx;
}
/* 应用标题 */
.app-title {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  padding: 20rpx 0;
}
/* 顶部城市和年级选择栏 */
.sub-header {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx 20rpx;
}
/* 城市选择 */
.city-selector {
  display: flex;
  align-items: center;
}
.city-name {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}
/* 年级选择 */
.grade-selector {
  display: flex;
  align-items: center;
}
.grade-name {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
  margin-right: 10rpx;
}
/* 年级选择下拉面板 */
.grade-dropdown {
  position: absolute;
  top: 120rpx;
  right: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  width: 200rpx;
}
.dropdown-options {
  max-height: 400rpx;
  overflow-y: auto;
}
.dropdown-option {
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}
.dropdown-option.active {
  color: #EC7A49;
  font-weight: bold;
}
/* 筛选下拉内容 */
.dropdown-content {
  position: absolute;
  top: 70rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}
/* 箭头图标 */
.arrow-icon {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #fff;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.arrow-icon.arrow-up {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
/* 筛选区域 */
.filter-section {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx 20rpx;
}
.filter-dropdown {
  flex: 1;
}
.filter-item {
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter-text {
  font-size: 28rpx;
  color: #fff;
  margin-right: 10rpx;
}
.filter-button {
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter-icon {
  width: 32rpx;
  height: 32rpx;
  /* 使用纯CSS替代图片 */
  position: relative;
  margin-right: 8rpx;
  border: 2rpx solid #fff;
  border-radius: 4rpx;
}
.filter-icon::before {
  content: "";
  position: absolute;
  top: 8rpx;
  left: 6rpx;
  width: 16rpx;
  height: 2rpx;
  background-color: #fff;
  box-shadow: 0 6rpx 0 #fff, 0 12rpx 0 #fff;
}
.filter-button-text {
  font-size: 28rpx;
  color: #fff;
}
/* 筛选面板 */
.filter-panel {
  position: absolute;
  top: 220rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  -webkit-transform: translateY(-100%);
          transform: translateY(-100%);
  opacity: 0;
  transition: all 0.3s ease;
}
.filter-panel.show {
  -webkit-transform: translateY(0);
          transform: translateY(0);
  opacity: 1;
}
.filter-panel-header,
.filter-panel-section {
  margin-bottom: 40rpx;
}
.filter-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.filter-option-item {
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}
.filter-option-item.active {
  background-color: #EC7A49;
  color: #fff;
}
.filter-section-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}
.arrow-icon-right {
  width: 15rpx;
  height: 26rpx;
  /* 使用纯CSS替代图片 */
  position: relative;
}
.arrow-icon-right::before {
  content: "";
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-top: 2rpx solid #666;
  border-right: 2rpx solid #666;
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  top: 8rpx;
  right: 6rpx;
}
.filter-panel-buttons {
  display: flex;
  margin-top: 40rpx;
}
.reset-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.apply-button {
  flex: 2;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background-color: #1989FA;
  border-radius: 8rpx;
}
/* 课程列表 */
.course-list {
  padding: 30rpx 30rpx 30rpx;
  position: relative;
  z-index: 10;
}
.course-list .course-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.course-list .course-item .course-left {
  width: 180rpx;
  height: 220rpx;
  position: relative;
}
.course-list .course-item .course-left .course-brand-logo {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: var(--theme-color);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: bold;
}
.course-list .course-item .course-left .course-brand-logo .brand-text {
  font-size: 28rpx;
  line-height: 1.2;
}
.course-list .course-item .course-left .course-brand-logo .brand-text.sm {
  font-size: 22rpx;
  line-height: 1.2;
}
.course-list .course-item .course-left .course-logo {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.course-list .course-item .course-content {
  flex: 1;
  padding: 20rpx;
  position: relative;
}
.course-list .course-item .course-content .course-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}
.course-list .course-item .course-content .course-title .school-tag {
  color: var(--theme-color);
  margin-right: 6rpx;
}
.course-list .course-item .course-content .course-info {
  font-size: 24rpx;
  color: var(--text-color-grey);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}
.course-list .course-item .course-content .course-info .location-icon, .course-list .course-item .course-content .course-info .time-icon, .course-list .course-item .course-content .course-info .tag-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}
.course-list .course-item .course-content .course-info .subject-text {
  color: #4CAF50;
  margin-right: 6rpx;
}
.course-list .course-item .course-content .course-info .level-text {
  color: #888;
}
.course-list .course-item .course-content .course-teacher {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}
.course-list .course-item .course-content .course-teacher .teacher-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.course-list .course-item .course-content .course-teacher .teacher-name {
  font-size: 24rpx;
  color: var(--text-color);
  margin-right: 10rpx;
}
.course-list .course-item .course-content .course-teacher .teacher-title {
  font-size: 22rpx;
  color: var(--text-color-light);
}
.course-list .course-item .course-content .course-price {
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
}
.course-list .course-item .course-content .course-price .price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
}
.course-list .course-item:first-child {
  margin-top: 10rpx;
}
/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 90;
}

