/* 选项卡 */
.booking-create {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
}
.booking-create .form-container {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.booking-create .form-container .form-item {
  margin-bottom: 30rpx;
}
.booking-create .form-container .form-item .form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.booking-create .form-container .form-item .form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.booking-create .form-container .form-item .form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.booking-create .form-container .agreement {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}
.booking-create .form-container .agreement .agreement-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}
.booking-create .footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.booking-create .footer .price-container {
  flex: 1;
}
.booking-create .footer .price-container .price-label {
  font-size: 28rpx;
  color: #666;
}
.booking-create .footer .price-container .price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B00;
}
.booking-create .footer .submit-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #FF6B00;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}
.booking-create .footer .submit-btn.disabled {
  background-color: #ccc;
}
