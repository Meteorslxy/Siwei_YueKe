/* 选项卡 */
.booking-list {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
}
.booking-list .tab-container {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
}
.booking-list .tab-container .tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.booking-list .tab-container .tab-item.active {
  color: #FF6B00;
  font-weight: 500;
}
.booking-list .tab-container .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF6B00;
  border-radius: 2rpx;
}
.booking-list .booking-container {
  flex: 1;
  padding: 20rpx;
}
