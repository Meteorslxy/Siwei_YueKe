/* 选项卡 */
.favorite-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
}
.filter-bar {
  display: flex;
  padding: 30rpx 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}
.filter-bar .page-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.filter-bar .manage-btn {
  padding: 0 20rpx;
  font-size: 30rpx;
  color: #FF6B00;
}
.favorite-list {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 120rpx;
}
.favorite-list .swipe-item-wrapper {
  position: relative;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  height: 200rpx;
  /* 设置固定高度 */
}
.favorite-list .swipe-item {
  position: relative;
  /* 改为相对定位 */
  width: 100%;
  height: 100%;
  background-color: #fff;
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
  -webkit-transform: translateX(0);
          transform: translateX(0);
  z-index: 1;
}
.favorite-list .swipe-item.swipe-active {
  -webkit-transform: translateX(-140rpx);
          transform: translateX(-140rpx);
  /* 左滑距离 */
}
.favorite-list .favorite-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.favorite-list .favorite-item .checkbox-wrapper {
  margin-right: 20rpx;
}
.favorite-list .favorite-item .item-content {
  flex: 1;
  display: flex;
  height: 160rpx;
}
.favorite-list .favorite-item .item-content .item-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}
.favorite-list .favorite-item .item-content .item-image image {
  width: 100%;
  height: 100%;
}
.favorite-list .favorite-item .item-content .item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}
.favorite-list .favorite-item .item-content .item-info .item-title {
  font-size: 28rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.favorite-list .favorite-item .item-content .item-info .item-type {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.favorite-list .favorite-item .item-content .item-info .item-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B00;
  margin-top: 8rpx;
}
.favorite-list .favorite-item .item-content .item-info .item-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.favorite-list .favorite-item .item-action {
  margin-left: 20rpx;
}
.favorite-list .favorite-item .item-action .action-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}
.favorite-list .favorite-item .item-action .action-btn.book-btn {
  color: #fff;
  background-color: #FF6B00;
  border: none;
}
.favorite-list .favorite-item .item-action .action-btn.delete-btn {
  display: flex;
  align-items: center;
  color: #FF3B30;
}
.favorite-list .favorite-item .item-action .action-btn.delete-btn .icon-delete {
  margin-right: 8rpx;
}
.favorite-list .swipe-actions {
  position: absolute;
  top: 0;
  right: 0;
  width: 140rpx;
  /* 与左滑距离一致 */
  height: 100%;
  display: flex;
  align-items: center;
}
.favorite-list .swipe-actions .swipe-btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background-color: #FF3B30;
  font-size: 28rpx;
}
.cart-footer {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}
.cart-footer .select-all {
  flex: 1;
  display: flex;
  align-items: center;
}
.cart-footer .select-all text {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.cart-footer .total-price {
  flex: 1;
  text-align: right;
}
.cart-footer .total-price .price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF3B30;
}
.cart-footer .checkout-btn {
  min-width: 240rpx;
  padding: 16rpx 30rpx;
  background-color: #FF6B00;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.cart-footer .checkout-btn:disabled {
  background-color: #ccc;
}
