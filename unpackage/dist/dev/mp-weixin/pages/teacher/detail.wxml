<view class="teacher-detail"><view class="teacher-header"><view class="avatar-container"><image class="teacher-avatar" src="{{$root.m0}}" mode="aspectFit"></image></view><view class="teacher-info"><view class="teacher-name">{{teacher.name}}</view><view class="teacher-title">{{teacher.title}}</view></view></view><view class="teacher-tabs"><block wx:for="{{tabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['switchTab',[index]]]]]}}" class="{{['tab-item',(currentTab===index)?'active':'']}}" bindtap="__e">{{''+tab.name+''}}</view></block></view><view class="teacher-content"><block wx:if="{{currentTab===0}}"><view class="intro-container"><view class="section-title">教师简介</view><view class="intro-text">{{teacher.description||teacher.introduction||'暂无简介'}}</view><view class="section-title">教学经历</view><view class="experience-list"><block wx:if="{{hasArrayExperience}}"><view class="experience-item"><block wx:for="{{teacher.experience}}" wx:for-item="item" wx:for-index="idx" wx:key="idx"><view class="experience-desc">{{''+item+''}}</view></block></view></block><block wx:else><block wx:if="{{hasStringExperience}}"><view class="experience-item"><view class="experience-desc">{{teacher.experience}}</view></view></block></block><block wx:for="{{teacher.experiences||[]}}" wx:for-item="item" wx:for-index="index"><view class="experience-item"><view class="experience-time">{{item.time}}</view><view class="experience-desc">{{item.description}}</view></view></block><block wx:if="{{showEmptyExperienceTip}}"><empty-tip vue-id="0b2e6f0f-1" tip="暂无教学经历" show="{{true}}" bind:__l="__l"></empty-tip></block></view><view class="section-title">所获奖项</view><view class="awards-list"><block wx:for="{{teacher.awards||[]}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="award-item"><view class="award-time">{{item.time}}</view><view class="award-name">{{item.name}}</view></view></block><block wx:if="{{showEmptyAwardsTip}}"><empty-tip vue-id="0b2e6f0f-2" tip="暂无获奖信息" show="{{true}}" bind:__l="__l"></empty-tip></block></view></view></block><block wx:if="{{currentTab===1}}"><view class="course-container"><block wx:if="{{hasCourses}}"><view class="course-list"><block wx:for="{{courseList}}" wx:for-item="course" wx:for-index="index"><course-card vue-id="{{'0b2e6f0f-3-'+index}}" course="{{course}}" data-event-opts="{{[['^click',[['onCourseClick']]],['^book',[['onBookClick']]]]}}" bind:click="__e" bind:book="__e" bind:__l="__l"></course-card></block></view></block><block wx:else><empty-tip vue-id="0b2e6f0f-4" tip="暂无课程" show="{{!loading}}" bind:__l="__l"></empty-tip></block><load-more vue-id="0b2e6f0f-5" status="{{loadMoreStatus}}" data-event-opts="{{[['^click',[['loadMore']]]]}}" bind:click="__e" bind:__l="__l"></load-more></view></block><block wx:if="{{currentTab===2}}"><view class="reviews-container"><block wx:if="{{hasReviews}}"><view class="review-list"><block wx:for="{{$root.l0}}" wx:for-item="review" wx:for-index="index"><view class="review-item"><view class="review-header"><image class="reviewer-avatar" src="{{review.$orig.avatar||'/static/images/default-avatar.png'}}" mode="aspectFill"></image><view class="reviewer-info"><view class="reviewer-name">{{review.$orig.userName}}</view><view class="review-time">{{review.m1}}</view></view><view class="review-rating"><block wx:for="{{5}}" wx:for-item="i" wx:for-index="__i0__" wx:key="*this"><text class="{{['iconfont','icon-favorite',(i<=review.$orig.rating)?'active':'']}}"></text></block></view></view><view class="review-content">{{review.$orig.content}}</view></view></block></view></block><block wx:else><empty-tip vue-id="0b2e6f0f-6" tip="暂无评价" show="{{!reviewLoading}}" bind:__l="__l"></empty-tip></block><load-more vue-id="0b2e6f0f-7" status="{{reviewLoadMoreStatus}}" data-event-opts="{{[['^click',[['loadMoreReviews']]]]}}" bind:click="__e" bind:__l="__l"></load-more></view></block></view></view>