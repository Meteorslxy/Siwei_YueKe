/* 选项卡 */
.teacher-list {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
}
.teacher-list .filter-bar {
  padding: 20rpx;
  background-color: #fff;
}
.teacher-list .filter-bar .search-box {
  display: flex;
  align-items: center;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 20rpx;
}
.teacher-list .filter-bar .search-box .iconfont {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.teacher-list .filter-bar .search-box input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
}
.teacher-list .filter-tabs {
  display: flex;
  flex-wrap: wrap;
  padding: 16rpx 10rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}
.teacher-list .filter-tabs .tab-item {
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 26rpx;
  margin: 6rpx;
}
.teacher-list .filter-tabs .tab-item.active {
  color: #fff;
  background-color: #FF6B00;
}
.teacher-list .teachers-container {
  flex: 1;
  padding: 20rpx;
}

