/* 选项卡 */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.header {
  margin-bottom: 40rpx;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.form-group {
  margin-bottom: 30rpx;
}
.form-group .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.form-group .tips {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}
.form-group .radio-group {
  display: flex;
  flex-direction: row;
}
.form-group .radio-group .radio-item {
  margin-right: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.form-group .picker-item {
  background-color: #fff;
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.form-group .picker-item .placeholder {
  color: #999;
}
.info-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 10rpx;
}
.info-card .info-item {
  display: flex;
  margin-bottom: 16rpx;
}
.info-card .info-item:last-child {
  margin-bottom: 0;
}
.info-card .info-item .info-label {
  width: 200rpx;
  font-size: 26rpx;
  color: #666;
}
.info-card .info-item .info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}
.submit-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #007AFF;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.submit-btn:disabled {
  background-color: #ccc;
}
.result-section {
  margin-top: 50rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.result-card {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
}
.result-card .result-item {
  display: flex;
  margin-bottom: 16rpx;
}
.result-card .result-item .result-label {
  width: 100rpx;
  font-size: 26rpx;
  color: #666;
}
.result-card .result-item .result-value {
  flex: 1;
  font-size: 26rpx;
}
.result-card .result-item .result-value.success {
  color: #4CD964;
  font-weight: bold;
}
.result-card .result-item .result-value.failed {
  color: #FF3B30;
  font-weight: bold;
}
.result-card .result-message {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1px solid #eee;
  font-size: 26rpx;
  color: #666;
}
.result-details {
  margin-top: 40rpx;
}
.result-details .result-list .result-list-item {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #ccc;
}
.result-details .result-list .result-list-item.success {
  border-left-color: #4CD964;
}
.result-details .result-list .result-list-item.failed {
  border-left-color: #FF3B30;
}
.result-details .result-list .result-list-item .result-list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.result-details .result-list .result-list-item .result-list-detail {
  font-size: 26rpx;
  color: #666;
  display: flex;
  flex-direction: column;
}
.result-details .result-list .result-list-item .result-list-detail .error-text {
  color: #FF3B30;
}

