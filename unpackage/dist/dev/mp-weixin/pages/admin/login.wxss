/* 选项卡 */
.login-container {
  padding: 60rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}
.login-container .login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}
.login-container .login-header .logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}
.login-container .login-header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.login-container .login-form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}
.login-container .login-form .input-group {
  margin-bottom: 30rpx;
}
.login-container .login-form .input-group .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.login-container .login-form .input-group input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.login-container .login-form .login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #EC7A49;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

