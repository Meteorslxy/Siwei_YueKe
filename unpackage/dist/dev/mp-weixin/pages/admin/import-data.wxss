/* 选项卡 */
.import-data {
  padding: 30rpx;
}
.import-data .header {
  margin-bottom: 30rpx;
}
.import-data .header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}
.import-data .header .subtitle {
  display: block;
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-top: 10rpx;
}
.import-data .section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.import-data .section .section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid var(--border-color-light);
  margin-bottom: 20rpx;
}
.import-data .section .form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.import-data .section .form-item .label {
  font-size: 28rpx;
  color: var(--text-color);
}
.import-data .section .form-item .picker {
  flex: 1;
  text-align: right;
}
.import-data .section .form-item .picker .picker-text {
  font-size: 28rpx;
  color: var(--theme-color);
}
.import-data .section .button-group {
  padding: 20rpx 0;
}
.import-data .section .button-group .import-btn {
  background-color: var(--theme-color);
  color: #fff;
  font-size: 28rpx;
  border-radius: 50rpx;
}
.import-data .section .log-list .log-item {
  font-size: 26rpx;
  margin-bottom: 10rpx;
  padding: 10rpx;
  border-radius: 6rpx;
  background-color: #f8f8f8;
}
.import-data .section .log-list .log-item.log-success {
  background-color: #e8f5e9;
  color: #4caf50;
}
.import-data .section .log-list .log-item.log-error {
  background-color: #ffebee;
  color: #f44336;
}
.import-data .section .log-list .log-item .log-time {
  margin-right: 10rpx;
  color: #999;
}
.import-data .help-section .help-content {
  padding: 10rpx 0;
}
.import-data .help-section .help-content .help-item {
  font-size: 26rpx;
  color: var(--text-color);
  line-height: 46rpx;
  padding: 6rpx 0;
  position: relative;
}

