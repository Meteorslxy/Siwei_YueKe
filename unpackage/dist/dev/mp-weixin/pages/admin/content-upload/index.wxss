/* 选项卡 */
.admin-upload-page {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}
.admin-upload-page .header {
  margin-bottom: 30rpx;
}
.admin-upload-page .header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.admin-upload-page .header .subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.admin-upload-page .main-content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.admin-upload-page .main-content .tab-header {
  display: flex;
  border-bottom: 1px solid #eee;
}
.admin-upload-page .main-content .tab-header .tab-item {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.admin-upload-page .main-content .tab-header .tab-item.active {
  color: #FF6B00;
  font-weight: bold;
}
.admin-upload-page .main-content .tab-header .tab-item.active:after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: -1px;
  height: 4rpx;
  background-color: #FF6B00;
  border-radius: 2rpx;
}
.admin-upload-page .main-content .tab-content {
  padding: 30rpx 0;
}
.admin-upload-page .main-content .tab-content .content-section {
  padding: 0 20rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #FF6B00;
}
.admin-upload-page .main-content .tab-content .form-group .form-item {
  margin-bottom: 30rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-item .input, .admin-upload-page .main-content .tab-content .form-group .form-item .textarea, .admin-upload-page .main-content .tab-content .form-group .form-item .picker-box {
  width: 100%;
  background-color: #f9f9f9;
  border: 1px solid #eee;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}
.admin-upload-page .main-content .tab-content .form-group .form-item .textarea {
  height: 200rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-item .picker-box {
  color: #666;
}
.admin-upload-page .main-content .tab-content .form-group .form-item .image-uploader {
  margin-top: 10rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 50rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}
.admin-upload-page .main-content .tab-content .form-group .form-footer .btn.reset {
  background-color: #f5f5f5;
  color: #666;
}
.admin-upload-page .main-content .tab-content .form-group .form-footer .btn.submit {
  background-color: #FF6B00;
  color: #fff;
}

