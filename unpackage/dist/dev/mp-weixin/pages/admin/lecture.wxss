/* 选项卡 */
.lecture-admin {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}
.lecture-admin .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.lecture-admin .header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.lecture-admin .header .actions {
  display: flex;
}
.lecture-admin .header .actions .btn-primary, .lecture-admin .header .actions .btn-default {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 24rpx;
  margin-left: 16rpx;
  border-radius: 6rpx;
}
.lecture-admin .header .actions .btn-primary {
  background-color: #EC7A49;
  color: #fff;
}
.lecture-admin .header .actions .btn-default {
  background-color: #f0f0f0;
  color: #666;
}
.lecture-admin .content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}
.lecture-admin .content .lecture-item {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.lecture-admin .content .lecture-item:last-child {
  border-bottom: none;
}
.lecture-admin .content .lecture-item .lecture-info {
  display: flex;
  margin-bottom: 20rpx;
}
.lecture-admin .content .lecture-item .lecture-info .cover {
  width: 180rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}
.lecture-admin .content .lecture-item .lecture-info .info {
  flex: 1;
}
.lecture-admin .content .lecture-item .lecture-info .info .title-row {
  margin-bottom: 10rpx;
}
.lecture-admin .content .lecture-item .lecture-info .info .title-row .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.lecture-admin .content .lecture-item .lecture-info .info .detail-row {
  margin-bottom: 8rpx;
}
.lecture-admin .content .lecture-item .lecture-info .info .detail-row .speaker {
  font-size: 26rpx;
  color: #666;
}
.lecture-admin .content .lecture-item .lecture-info .info .time-row {
  margin-bottom: 8rpx;
}
.lecture-admin .content .lecture-item .lecture-info .info .time-row .time {
  font-size: 26rpx;
  color: #5B8FF9;
}
.lecture-admin .content .lecture-item .lecture-info .info .location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.lecture-admin .content .lecture-item .lecture-info .info .description {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}
.lecture-admin .content .lecture-item .actions {
  display: flex;
  justify-content: flex-end;
}
.lecture-admin .content .lecture-item .actions .action {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  border-radius: 6rpx;
  margin-left: 16rpx;
}
.lecture-admin .content .lecture-item .actions .action.edit {
  color: #5B8FF9;
  background-color: rgba(91, 143, 249, 0.1);
}
.lecture-admin .content .lecture-item .actions .action.delete {
  color: #F56C6C;
  background-color: rgba(245, 108, 108, 0.1);
}
.lecture-admin .empty {
  padding: 100rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
}
.lecture-admin .empty .empty-text {
  font-size: 28rpx;
  color: #999;
}
.lecture-admin .loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}
.lecture-admin .loading .spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #EC7A49;
  border-radius: 50%;
  -webkit-animation: spin 1s linear infinite;
          animation: spin 1s linear infinite;
}
@-webkit-keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes spin {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
