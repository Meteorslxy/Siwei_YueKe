/* 选项卡 */
.init-data-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}
.header {
  margin-bottom: 30rpx;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.init-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.init-card .card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}
.init-card .card-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.5;
}
.init-card .option-row {
  margin-bottom: 30rpx;
}
.init-card .option-row .checkbox-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.init-card .option-row .checkbox-label text {
  margin-left: 10rpx;
}
.init-card .btn-row {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.init-card .btn-row .init-btn {
  background-color: #EC7A49;
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.init-card .btn-row .init-btn:disabled {
  opacity: 0.6;
}
.init-card .btn-row .view-btn {
  background-color: #4a90e2;
  color: #fff;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
.init-card .btn-row .view-btn:disabled {
  opacity: 0.6;
}
.init-card .result-box {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-top: 20rpx;
}
.init-card .result-box .result-text {
  font-size: 28rpx;
  line-height: 1.5;
}
.init-card .result-box .result-text.success {
  color: #4caf50;
}
.init-card .result-box .result-text.warning {
  color: #ff9800;
}
.init-card .result-box .result-text.error {
  color: #f44336;
}
.init-card .data-list {
  margin-top: 30rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}
.init-card .data-list .list-header {
  display: flex;
  background-color: #f5f5f5;
  padding: 20rpx;
  font-weight: bold;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}
.init-card .data-list .list-header .header-item {
  flex: 1;
}
.init-card .data-list .list-header .header-item:last-child {
  text-align: center;
  flex: 0.5;
}
.init-card .data-list .list-item {
  display: flex;
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}
.init-card .data-list .list-item:last-child {
  border-bottom: none;
}
.init-card .data-list .list-item .item-name, .init-card .data-list .list-item .item-district {
  flex: 1;
}
.init-card .data-list .list-item .item-actions {
  flex: 0.5;
  text-align: center;
}
.init-card .data-list .list-item .item-actions .action-btn {
  color: #4a90e2;
}
.init-card .data-list .list-item .item-actions .action-btn:active {
  opacity: 0.8;
}
.init-card .empty-tip {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}
