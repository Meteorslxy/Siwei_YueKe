/* 选项卡 */
.school-detail {
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}
.school-detail .school-header {
  background-color: #fff;
  margin-bottom: 20rpx;
}
.school-detail .school-header .banner {
  width: 100%;
  height: 400rpx;
}
.school-detail .school-header .banner image {
  width: 100%;
  height: 100%;
}
.school-detail .school-header .school-info {
  padding: 30rpx;
}
.school-detail .school-header .school-info .school-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.school-detail .school-header .school-info .school-address, .school-detail .school-header .school-info .school-phone {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}
.school-detail .school-header .school-info .school-address .iconfont, .school-detail .school-header .school-info .school-phone .iconfont {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.school-detail .school-header .school-info .school-address .navigate, .school-detail .school-header .school-info .school-address .call, .school-detail .school-header .school-info .school-phone .navigate, .school-detail .school-header .school-info .school-phone .call {
  margin-left: auto;
  color: #FF6B00;
}
.school-detail .school-tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}
.school-detail .school-tabs .tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.school-detail .school-tabs .tab-item.active {
  color: #FF6B00;
  font-weight: 500;
}
.school-detail .school-tabs .tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #FF6B00;
  border-radius: 2rpx;
}
.school-detail .school-content {
  flex: 1;
  padding: 0 20rpx 20rpx;
}
.school-detail .school-content .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
  position: relative;
  padding-left: 20rpx;
}
.school-detail .school-content .section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background-color: #FF6B00;
  border-radius: 3rpx;
}
.school-detail .school-content .intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.school-detail .school-content .facility-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.school-detail .school-content .facility-list .facility-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
}
.school-detail .school-content .facility-list .facility-item image {
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
}
.school-detail .school-content .facility-list .facility-item .facility-name {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
  text-align: center;
}

