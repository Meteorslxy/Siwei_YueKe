.markdown-container {
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.header {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.header .back-button {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header .back-button .back-icon {
  font-size: 40rpx;
  color: #333;
}
.header .title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 80rpx;
  /* 平衡左侧按钮宽度 */
}
.content {
  padding: 30rpx;
  /* Markdown样式 */
}
.content :deep(._h1) {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}
.content :deep(._h2) {
  font-size: 36rpx;
  font-weight: bold;
  margin: 24rpx 0;
  color: #333;
}
.content :deep(._h3) {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}
.content :deep(._p) {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  color: #666;
}
.content :deep(._ul), .content :deep(._ol) {
  padding-left: 40rpx;
  margin-bottom: 20rpx;
}
.content :deep(._li) {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 10rpx;
  color: #666;
}
.content :deep(._a) {
  color: #007AFF;
  text-decoration: none;
}
.content :deep(._strong) {
  font-weight: bold;
}
.content :deep(._em) {
  font-style: italic;
}
.content :deep(._code) {
  background-color: #f3f3f3;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-family: Consolas, Monaco, monospace;
  font-size: 28rpx;
}
.content :deep(._pre) {
  background-color: #f3f3f3;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin-bottom: 20rpx;
}
.content :deep(._blockquote) {
  border-left: 8rpx solid #ddd;
  padding: 10rpx 20rpx;
  margin: 20rpx 0;
  color: #666;
  background-color: #f9f9f9;
}
