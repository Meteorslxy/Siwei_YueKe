.markdown-container {
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.header {
  display: flex;
  align-items: center;
  height: 88rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.header .back-button {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.header .back-icon {
  font-size: 40rpx;
  color: #333;
}
.header .title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 80rpx;
}
.content {
  padding: 30rpx;
}
.content  ._h1, .content  ._h2, .content  ._h3, .content  ._h4, .content  ._h5, .content  ._h6 {
  font-weight: bold;
  margin: 20rpx 0;
  color: #333;
}
.content  ._h1 {
  font-size: 40rpx;
  margin-bottom: 30rpx;
}
.content  ._h2 {
  font-size: 36rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.content  ._h3 {
  font-size: 32rpx;
}
.content  ._p {
  margin: 16rpx 0;
  line-height: 1.6;
  font-size: 30rpx;
  color: #333;
}
.content  ._ul, .content  ._ol {
  padding-left: 40rpx;
  margin: 16rpx 0;
}
.content  ._li {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  margin: 10rpx 0;
}
.content  ._a {
  color: #007aff;
  text-decoration: none;
}
.content  ._strong {
  font-weight: bold;
}
.content  ._em {
  font-style: italic;
}
.content  ._code {
  background-color: #f5f5f5;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: monospace;
}
.content  ._pre {
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-x: auto;
  margin: 20rpx 0;
}
.content  ._pre ._code {
  background-color: transparent;
  padding: 0;
}
.content  ._blockquote {
  border-left: 8rpx solid #ddd;
  padding: 10rpx 20rpx;
  margin: 20rpx 0;
  color: #666;
}
.content  ._table {
  border-collapse: collapse;
  width: 100%;
  margin: 20rpx 0;
}
.content  ._table ._th, .content  ._table ._td {
  border: 1rpx solid #ddd;
  padding: 12rpx;
  text-align: left;
}
.content  ._table ._th {
  background-color: #f5f5f5;
  font-weight: bold;
}
