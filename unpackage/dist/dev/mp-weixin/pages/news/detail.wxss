.news-detail-container {
  min-height: 100vh;
  background-color: #fff;
}
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: var(--theme-color);
  color: #fff;
  display: flex;
  align-items: center;
  padding-bottom: 10px;
  z-index: 100;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}
.navbar .nav-back {
  width: 88rpx;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navbar .nav-back .back-arrow {
  width: 24rpx;
  height: 24rpx;
  border-top: 4rpx solid #fff;
  border-left: 4rpx solid #fff;
  -webkit-transform: rotate(-45deg);
          transform: rotate(-45deg);
  margin-left: 10rpx;
}
.navbar .nav-back:active {
  opacity: 0.8;
}
.navbar .nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
}
.navbar .nav-right {
  width: 88rpx;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navbar .nav-right .iconfont {
  font-size: 36rpx;
}
.detail-content {
  padding: 30rpx;
  margin-top: calc(44px + 25px + 30px);
}
.detail-content .article-header {
  margin-bottom: 40rpx;
}
.detail-content .article-header .article-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-color);
  line-height: 1.5;
  margin-bottom: 24rpx;
}
.detail-content .article-header .article-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: var(--text-color-light);
}
.detail-content .article-header .article-info .article-source {
  color: var(--theme-color);
}
.detail-content .article-content {
  font-size: 30rpx;
  color: var(--text-color);
  line-height: 1.8;
  letter-spacing: 0.5rpx;
}
.detail-content .article-content .article-summary {
  margin-bottom: 40rpx;
}
.detail-content .article-content .article-summary .summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--theme-color);
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--theme-color);
}
.detail-content .article-content .article-summary .summary-content {
  font-size: 30rpx;
  color: var(--text-color);
  line-height: 1.8;
  background-color: rgba(236, 122, 73, 0.05);
  padding: 20rpx;
  border-radius: 12rpx;
}
.detail-content .article-content .article-image {
  margin: 30rpx 0;
}
.detail-content .article-content .article-image .content-image {
  width: 100%;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.detail-content .article-content :deep(._p) {
  margin-bottom: 24rpx;
}
.detail-content .article-content :deep(._img) {
  max-width: 100%;
  margin: 24rpx 0;
  border-radius: 12rpx;
}
.detail-content .article-content :deep(._h2) {
  font-size: 36rpx;
  font-weight: 600;
  margin: 30rpx 0 20rpx;
  color: #333;
}
.detail-content .article-content :deep(._h3) {
  font-size: 32rpx;
  font-weight: 600;
  margin: 26rpx 0 18rpx;
  color: #333;
}
.detail-content .article-content :deep(._ul), .detail-content .article-content :deep(._ol) {
  padding-left: 40rpx;
  margin-bottom: 24rpx;
}
.detail-content .article-content :deep(._li) {
  margin-bottom: 12rpx;
}
.detail-content .article-content :deep(._a) {
  color: var(--theme-color);
  text-decoration: none;
}
.loading-container {
  padding: 30rpx;
  margin-top: calc(44px + 25px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}
.loading-container .loading-text {
  font-size: 28rpx;
  color: var(--text-color-light);
  text-align: center;
}
.loading-container .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.loading-container .error-container .error-text {
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: 600;
  margin-bottom: 20rpx;
}
.loading-container .error-container .error-tip {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-bottom: 40rpx;
}
.loading-container .error-container .retry-btn {
  background-color: var(--theme-color);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 80rpx;
  border-radius: 40rpx;
}
.loading-container .error-container .retry-btn:active {
  opacity: 0.9;
}
.no-content {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-color-light);
  font-size: 30rpx;
}
