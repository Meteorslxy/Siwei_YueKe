<view class="news-detail-container"><view class="navbar" style="{{'padding-top:'+(statusBarHeight+'px')+';'}}"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="nav-back" bindtap="__e"><text class="iconfont icon-back"></text></view><view class="nav-title">通知详情</view></view><block wx:if="{{newsInfo}}"><view class="detail-content"><view class="article-header"><view class="article-title">{{newsInfo.title}}</view><view class="article-info"><text class="article-source">{{newsInfo.source||'四维工作室'}}</text><text class="article-time">{{$root.m0}}</text></view></view><block wx:if="{{newsInfo.coverImage}}"><view class="article-cover"><image class="cover-image" src="{{newsInfo.coverImage}}" mode="widthFix"></image></view></block><view class="article-content"><rich-text nodes="{{$root.m1}}"></rich-text></view></view></block><block wx:else><view class="loading-container"><block wx:if="{{loading}}"><view class="loading-text">加载中...</view></block><block wx:else><view class="error-container"><view class="error-text">获取通知详情失败</view><view class="error-tip">请稍后再试</view><button data-event-opts="{{[['tap',[['retryLoad',['$event']]]]]}}" class="retry-btn" bindtap="__e">重新加载</button></view></block></view></block></view>