/* 选项卡 */
.detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
  position: relative;
}
/* 图标样式 */
.iconfont {
  font-family: "iconfont";
  font-size: 48rpx;
  font-style: normal;
  display: inline-block;
}
.iconfont.icon-time:before {
  content: "\e657";
}
.iconfont.icon-check-circle:before {
  content: "\e645";
}
.iconfont.icon-success:before {
  content: "\e6b3";
}
.iconfont.icon-close-circle:before {
  content: "\e646";
}
.iconfont.icon-help:before {
  content: "\e6a8";
}
/* 状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  color: #fff;
}
.status-bar.status-pending {
  background: linear-gradient(to right, #FF9500, #FF7800);
}
.status-bar.status-confirmed {
  background: linear-gradient(to right, #4CD964, #3CC651);
}
.status-bar.status-finished {
  background: linear-gradient(to right, #007AFF, #0055CC);
}
.status-bar.status-cancelled {
  background: linear-gradient(to right, #8E8E93, #636366);
}
.status-bar .status-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.status-bar .status-icon .iconfont {
  font-size: 60rpx;
}
.status-bar .status-info {
  flex: 1;
}
.status-bar .status-info .status-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.status-bar .status-info .status-desc {
  font-size: 26rpx;
  opacity: 0.8;
}
/* 信息卡片 */
.info-card {
  margin: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.info-card .card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid var(--theme-color);
}
.info-card .course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 30rpx;
  line-height: 1.4;
  word-break: break-all;
}
.info-card .course-deleted-tag {
  display: inline-block;
  background-color: #ff4d4f;
  color: #fff;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 12px;
  margin-top: 5px;
  margin-bottom: 10px;
}
.info-card .info-row {
  display: flex;
  margin-bottom: 24rpx;
  padding: 8rpx 0;
}
.info-card .info-row:last-child {
  margin-bottom: 0;
}
.info-card .info-row .info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: var(--text-color-grey);
}
.info-card .info-row .info-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
  word-break: break-all;
}
.info-card .info-row.teacher-info {
  background-color: rgba(255, 107, 0, 0.08);
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin: 12rpx 0;
}
.info-card .info-row.teacher-info .teacher-name {
  color: #FF6B00;
  font-weight: bold;
  font-size: 30rpx;
}
/* 底部空白区域，防止内容被操作按钮遮挡 */
.bottom-space {
  height: 150rpx;
}
/* 操作区域 */
.action-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.action-area .action-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 30rpx;
}
.action-area .action-bar .action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.action-area .action-bar .action-btn.outline {
  border: 1rpx solid var(--theme-color);
  color: var(--theme-color);
}
.action-area .action-bar .action-btn.primary {
  background-color: var(--theme-color);
  color: #fff;
}
/* 课程删除标记 */
.course-deleted {
  color: #ff4d4f;
  font-weight: bold;
}
/* 自动取消提示 */
.auto-cancel {
  color: #ff7a45;
  font-weight: bold;
  margin-top: 10rpx;
}
/* 倒计时样式 */
.status-countdown {
  margin-top: 15rpx;
  background-color: rgba(255, 0, 0, 0.15);
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  display: inline-block;
  border: 2px solid rgba(255, 0, 0, 0.4);
  -webkit-animation: pulse 1s infinite;
          animation: pulse 1s infinite;
  font-weight: bold;
  box-shadow: 0 0 10rpx rgba(255, 0, 0, 0.3);
}
@-webkit-keyframes pulse {
0% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.6);
}
70% {
    box-shadow: 0 0 0 10rpx rgba(255, 0, 0, 0);
}
100% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
}
}
@keyframes pulse {
0% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0.6);
}
70% {
    box-shadow: 0 0 0 10rpx rgba(255, 0, 0, 0);
}
100% {
    box-shadow: 0 0 0 0 rgba(255, 0, 0, 0);
}
}
.countdown-label {
  font-size: 28rpx;
  color: #ff0000;
}
.countdown-time {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff0000;
}
.phone-link {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #007aff;
  display: inline-flex;
  align-items: center;
}
.phone-link .iconfont {
  margin-left: 8rpx;
  font-size: 30rpx;
}
.teacher-info {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.teacher-info .info-label, .teacher-info .info-value {
  margin-right: 10rpx;
}
.teacher-info .teacher-name {
  font-weight: 500;
}
