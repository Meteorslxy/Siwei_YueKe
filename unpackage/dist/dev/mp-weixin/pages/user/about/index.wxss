/* 选项卡 */
.about-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: 40rpx;
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background-color: #fff;
}
.header .logo {
  width: 300rpx;
  height: auto;
  margin-bottom: 20rpx;
}
.header .version {
  font-size: 24rpx;
  color: var(--text-color-light);
}
.content {
  padding: 30rpx;
}
.content .section {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.content .section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  color: var(--text-color);
  border-bottom: 1rpx solid var(--border-color);
}
.content .section .section-content {
  padding: 30rpx;
}
.content .section .section-content .paragraph {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}
.feature-item {
  display: flex;
  margin-bottom: 30rpx;
}
.feature-item .feature-icon {
  font-size: 48rpx;
  color: var(--theme-color);
  margin-right: 20rpx;
}
.feature-item .feature-info {
  flex: 1;
}
.feature-item .feature-info .feature-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
  display: block;
}
.feature-item .feature-info .feature-desc {
  font-size: 26rpx;
  color: var(--text-color-light);
  line-height: 1.5;
}
.contact-item {
  display: flex;
  margin-bottom: 20rpx;
}
.contact-item .contact-label {
  font-size: 28rpx;
  color: var(--text-color);
  width: 180rpx;
}
.contact-item .contact-value {
  font-size: 28rpx;
  color: var(--theme-color);
  flex: 1;
}
