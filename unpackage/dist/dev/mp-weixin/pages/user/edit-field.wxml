<view class="edit-field-container"><view class="content-wrapper"><view class="header"><view data-event-opts="{{[['tap',[['goBack',['$event']]]]]}}" class="back-button" bindtap="__e"><text>←</text></view><text class="title">{{title}}</text><view data-event-opts="{{[['tap',[['saveField',['$event']]]]]}}" class="save-button" bindtap="__e"><text>保存</text></view></view><view class="edit-form"><block wx:if="{{fieldType==='text'}}"><view class="form-item"><input class="input" placeholder="{{'请输入'+title}}" maxlength="{{fieldMaxLength}}" focus="{{true}}" data-event-opts="{{[['input',[['__set_model',['','fieldValue','$event',[]]]]]]}}" value="{{fieldValue}}" bindinput="__e"/><text class="count">{{$root.g0+"/"+fieldMaxLength}}</text></view></block><block wx:if="{{fieldType==='textarea'}}"><view class="form-item"><textarea class="textarea" placeholder="{{'请输入'+title}}" maxlength="{{fieldMaxLength}}" auto-height="{{true}}" focus="{{true}}" data-event-opts="{{[['input',[['__set_model',['','fieldValue','$event',[]]]]]]}}" value="{{fieldValue}}" bindinput="__e"></textarea><text class="count">{{$root.g1+"/"+fieldMaxLength}}</text></view></block><block wx:if="{{fieldType==='gender'}}"><view class="form-item"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="{{['gender-option',(fieldValue==1)?'selected':'']}}" bindtap="__e"><text>男</text></view><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="{{['gender-option',(fieldValue==2)?'selected':'']}}" bindtap="__e"><text>女</text></view></view></block><block wx:if="{{fieldType==='date'}}"><view class="form-item"><picker mode="date" value="{{fieldValue}}" fields="day" start="1900-01-01" end="{{currentDate}}" data-event-opts="{{[['change',[['onDateChange',['$event']]]]]}}" bindchange="__e"><view class="date-picker"><text>{{fieldValue||'请选择日期'}}</text></view></picker></view></block></view></view></view>