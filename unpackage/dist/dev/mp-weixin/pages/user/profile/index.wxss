/* 选项卡 */
.profile-container {
  min-height: 100vh;
  background-color: var(--bg-color);
}
.header {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  position: relative;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}
.header .refresh-btn {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  color: var(--theme-color);
  padding: 10rpx 20rpx;
}
.username-box {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.username-box .username-content {
  display: flex;
  flex-direction: column;
}
.username-box .username-content .username-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.username-box .username-content .username-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #EC7A49;
}
.username-box .username-refresh {
  font-size: 24rpx;
  color: #fff;
  background-color: #EC7A49;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}
.profile-form {
  margin-top: 20rpx;
  background-color: #fff;
}
.profile-form .form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}
.profile-form .form-item:last-child {
  border-bottom: none;
}
.profile-form .form-item .item-label {
  font-size: 30rpx;
  color: var(--text-color);
  width: 180rpx;
}
.profile-form .form-item .item-content {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.profile-form .form-item .item-content .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.profile-form .form-item .item-content .item-value {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-right: 10rpx;
  text-align: right;
  flex: 1;
}
.profile-form .form-item .item-content .item-arrow {
  font-size: 24rpx;
  color: var(--text-color-light);
}
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
}
.popup-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  z-index: 999;
  padding-bottom: 50rpx;
  /* 适配底部安全区 */
  -webkit-animation: slideUp 0.3s ease;
          animation: slideUp 0.3s ease;
}
@-webkit-keyframes slideUp {
from {
    -webkit-transform: translateY(100%);
            transform: translateY(100%);
}
to {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes slideUp {
from {
    -webkit-transform: translateY(100%);
            transform: translateY(100%);
}
to {
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}
.popup-header .popup-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
}
.popup-header .popup-cancel, .popup-header .popup-save {
  font-size: 30rpx;
  padding: 20rpx 10rpx;
}
.popup-header .popup-cancel {
  color: var(--text-color-light);
}
.popup-header .popup-save {
  color: var(--theme-color);
}
.popup-content {
  padding: 30rpx;
  position: relative;
}
.popup-content .popup-input {
  width: 100%;
  font-size: 32rpx;
  color: var(--text-color);
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}
.popup-content .popup-textarea {
  width: 100%;
  min-height: 200rpx;
  font-size: 32rpx;
  color: var(--text-color);
  padding: 20rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}
.popup-content .popup-count {
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: var(--text-color-light);
}
.popup-content .debug-info {
  background-color: #f8f8f8;
  font-size: 24rpx;
}
.popup-content .debug-info .debug-text {
  color: #999;
}
.username-display {
  border-bottom: 1rpx solid var(--border-color) !important;
  background-color: #fafafa;
}
.username-display .item-label {
  color: #EC7A49;
}
.username-display .item-value {
  color: #333 !important;
  font-weight: bold;
}
.username-display .item-refresh {
  color: #EC7A49;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.username-box {
  background-color: #ff0000;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.username-box .username-label {
  font-size: 32rpx;
  font-weight: bold;
}
.username-box .username-value {
  font-size: 32rpx;
  font-weight: bold;
}
