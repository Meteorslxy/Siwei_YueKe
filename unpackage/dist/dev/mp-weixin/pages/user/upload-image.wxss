/* 选项卡 */
.upload-page {
  padding: 30rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}
.upload-page .page-header {
  margin-bottom: 40rpx;
}
.upload-page .page-header .header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}
.upload-page .page-header .header-desc {
  font-size: 28rpx;
  color: #666;
}
.upload-page .upload-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.upload-page .upload-section .section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 15rpx;
  border-left: 6rpx solid #FF6B00;
}
.upload-page .upload-section .upload-container {
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}
.upload-page .upload-section .image-info {
  margin-top: 30rpx;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}
.upload-page .upload-section .image-info .info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 10rpx;
}
.upload-page .upload-section .image-info .info-item .info-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
  white-space: nowrap;
}
.upload-page .upload-section .image-info .info-item .info-value {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
  flex: 1;
}
.upload-page .upload-section .image-info .image-preview {
  margin-top: 10rpx;
}
.upload-page .upload-section .multi-upload {
  display: flex;
  flex-wrap: wrap;
}
.upload-page .upload-section .multi-upload .upload-item {
  margin: 10rpx;
}
.upload-page .upload-section .multi-upload .upload-item .item-container {
  position: relative;
}
.upload-page .upload-section .multi-upload .add-btn {
  width: 200rpx;
  height: 200rpx;
  background-color: #f5f5f5;
  border: 1px dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.upload-page .upload-section .multi-upload .add-btn .iconfont {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.upload-page .upload-section .multi-upload .add-btn .add-text {
  font-size: 24rpx;
  color: #999;
}
.upload-page .action-btns {
  display: flex;
  margin-top: 50rpx;
}
.upload-page .action-btns .btn {
  flex: 1;
  margin: 0 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.upload-page .action-btns .btn.clear-btn {
  background-color: #f5f5f5;
  color: #666;
}
.upload-page .action-btns .btn.save-btn {
  background-color: #FF6B00;
  color: #fff;
}

