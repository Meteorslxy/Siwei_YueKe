/* 选项卡 */
.setting-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 20rpx 0;
}
.section {
  margin-bottom: 20rpx;
}
.section .section-title {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: var(--text-color-light);
}
.section .setting-list {
  background-color: #fff;
}
.section .setting-list .setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}
.section .setting-list .setting-item:last-child {
  border-bottom: none;
}
.section .setting-list .setting-item .item-label {
  font-size: 30rpx;
  color: var(--text-color);
}
.section .setting-list .setting-item .item-action {
  display: flex;
  align-items: center;
}
.section .setting-list .setting-item .item-action .item-value {
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-right: 10rpx;
}
.section .setting-list .setting-item .item-action .item-arrow {
  font-size: 36rpx;
  color: #999;
  font-weight: bold;
  margin-left: 10rpx;
}
