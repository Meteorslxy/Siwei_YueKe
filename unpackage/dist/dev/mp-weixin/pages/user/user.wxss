/* 选项卡 */
.user-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  display: flex;
  flex-direction: column;
}
/* 用户信息区域 */
.user-info-section {
  position: relative;
  height: 280rpx;
}
.user-info-section .user-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-color: #EC7A49;
  /* 返回按钮样式 */
  /* 刷新按钮样式 */
}
.user-info-section .user-bg .back-button {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.user-info-section .user-bg .back-button text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.user-info-section .user-bg .refresh-button {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.user-info-section .user-bg .refresh-button text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}
.user-info-section .user-info {
  position: absolute;
  top: 100rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 690rpx;
  height: 240rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}
.user-info-section .user-info .avatar-wrap {
  position: absolute;
  top: -80rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-info-section .user-info .avatar-wrap .user-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 72rpx;
}
.user-info-section .user-info .user-detail {
  text-align: center;
}
.user-info-section .user-info .user-detail .user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
}
.user-info-section .user-info .user-detail .login-btn {
  margin-top: 50rpx;
  font-size: 32rpx;
  background-color: var(--theme-color);
  color: #fff;
  border-radius: 40rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.user-info-section .user-info .user-detail .edit-profile-btn {
  margin-top: 20rpx;
  font-size: 32rpx;
  background-color: var(--theme-color);
  color: #fff;
  border-radius: 40rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
/* 菜单区域 */
.menu-section {
  padding: 20rpx;
  margin-top: 40rpx;
}
.menu-section .menu-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.menu-section .menu-group .menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.menu-section .menu-group .menu-title .refresh-link {
  font-size: 24rpx;
  color: var(--theme-color);
  font-weight: normal;
}
.menu-section .menu-group .menu-content {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}
.menu-section .menu-group .menu-content .menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  position: relative;
}
.menu-section .menu-group .menu-content .menu-item .item-badge {
  position: absolute;
  top: -6rpx;
  right: 10rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background-color: #FF6B00;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  z-index: 1;
}
.menu-section .menu-group .menu-content .menu-item .item-icon-img {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 10rpx;
}
.menu-section .menu-group .menu-content .menu-item .item-text {
  font-size: 24rpx;
  color: var(--text-color);
}
.menu-section .menu-group .menu-list .menu-list-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid var(--border-color-light);
}
.menu-section .menu-group .menu-list .menu-list-item:last-child {
  border-bottom: none;
}
.menu-section .menu-group .menu-list .menu-list-item .list-icon {
  font-size: 36rpx;
  color: var(--theme-color);
  margin-right: 20rpx;
}
.menu-section .menu-group .menu-list .menu-list-item .list-icon-img {
  width: 42rpx;
  height: 42rpx;
  margin-right: 20rpx;
}
.menu-section .menu-group .menu-list .menu-list-item .list-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}
.menu-section .menu-group .menu-list .menu-list-item .list-arrow {
  font-size: 32rpx;
  color: var(--text-color-light);
  font-weight: normal;
}
.menu-section .menu-group .menu-list .menu-list-item.test-btn {
  background-color: #f8f8f8;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  height: 110rpx;
}
.menu-section .menu-group .menu-list .menu-list-item.test-btn .list-icon {
  color: #1974FF;
}
.menu-section .menu-group .menu-list .menu-list-item.test-btn .list-text {
  color: #1974FF;
  font-weight: bold;
}
/* 底部区域 */
.bottom-area {
  margin-top: auto;
  padding: 30rpx 20rpx;
}
.bottom-area .logout-btn {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #FF3B30;
  margin-bottom: 20rpx;
}
.bottom-area .safe-area-bottom {
  height: 50rpx;
}
/* 当没有内容时的重新加载提示 */
.reload-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20rpx;
}
.reload-container image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.reload-container text {
  font-size: 28rpx;
  color: var(--text-color);
  margin-bottom: 20rpx;
}
.reload-container button {
  font-size: 32rpx;
  background-color: var(--theme-color);
  color: #fff;
  border-radius: 40rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
}
