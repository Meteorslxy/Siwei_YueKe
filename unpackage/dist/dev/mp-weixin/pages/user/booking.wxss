/* 选项卡 */
.booking-container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding-bottom: env(safe-area-inset-bottom);
}
/* 状态筛选选项卡 */
.tab-bar {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 0;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.tab-bar .tab-item {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: var(--text-color-light);
  position: relative;
  padding: 10rpx 0;
}
.tab-bar .tab-item.active {
  color: var(--theme-color);
  font-weight: bold;
}
.tab-bar .tab-item.active::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: var(--theme-color);
  border-radius: 3rpx;
}
.tab-bar .tab-item .badge {
  position: absolute;
  top: -8rpx;
  right: 50%;
  margin-right: -50rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background-color: var(--theme-color);
  color: #ffffff;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
  padding: 0 6rpx;
  font-weight: normal;
}
/* 预约记录列表 */
.booking-list {
  padding: 20rpx;
}
.booking-list .booking-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}
.booking-list .booking-item:active {
  -webkit-transform: scale(0.99);
          transform: scale(0.99);
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
}
.booking-list .booking-item .booking-content {
  padding: 16rpx;
}
.booking-list .booking-item .booking-content .booking-main {
  /* 新增支付状态行样式 */
}
.booking-list .booking-item .booking-content .booking-main .course-info {
  flex: 1;
  /* 移除booking-status的样式设置，避免冲突 */
}
.booking-list .booking-item .booking-content .booking-main .course-info .course-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}
.booking-list .booking-item .booking-content .booking-main .course-info .course-deleted-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: #EEEEEE;
  color: #9E9E9E;
  border-radius: 16rpx;
  margin-right: 10rpx;
}
.booking-list .booking-item .booking-content .booking-main .course-info .auto-cancel-tag {
  display: inline-block;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: #ffecec;
  color: #ff6464;
  border-radius: 16rpx;
}
.booking-list .booking-item .booking-content .booking-main .payment-status-row {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}
.booking-list .booking-item .booking-content .booking-main .payment-status-row .booking-status {
  margin-right: 16rpx;
  flex-shrink: 0;
}
.booking-list .booking-item .booking-content .booking-main .payment-status-row .payment-countdown {
  font-size: 24rpx;
  color: #FF5733;
}
.booking-list .booking-item .booking-content .booking-main .payment-status-row .payment-countdown .countdown-time {
  color: #FF5733;
  font-weight: bold;
}
.booking-list .booking-item .booking-content .booking-main .booking-details {
  display: flex;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column.left-column {
  flex: 1.2;
  margin-right: 10rpx;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column.right-column {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column .detail-row {
  margin-bottom: 10rpx;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column .detail-row .detail-label {
  font-size: 24rpx;
  color: var(--text-color-grey);
  margin-bottom: 4rpx;
  display: block;
  position: relative;
  padding-left: 16rpx;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column .detail-row .detail-label::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 6rpx;
  height: 6rpx;
  background-color: var(--theme-color);
  border-radius: 50%;
}
.booking-list .booking-item .booking-content .booking-main .booking-details .details-column .detail-row .detail-value {
  font-size: 26rpx;
  color: var(--text-color);
  display: block;
  word-break: break-word;
  padding-left: 16rpx;
  line-height: 1.3;
}
.booking-list .booking-item .booking-time {
  font-size: 24rpx;
  color: var(--text-color-light);
  text-align: right;
  padding: 0 16rpx 12rpx 0;
  position: relative;
  bottom: 0;
  right: 0;
}
.booking-list .booking-item .booking-footer {
  display: flex;
  justify-content: flex-end;
  padding: 12rpx 16rpx;
  border-top: 1rpx solid var(--border-color-light);
}
.booking-list .booking-item .booking-footer .booking-actions {
  display: flex;
}
.booking-list .booking-item .booking-footer .booking-actions .action-btn {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  margin-left: 16rpx;
  border: 1rpx solid var(--border-color);
  color: var(--text-color);
  background-color: #ffffff;
}
.booking-list .booking-item .booking-footer .booking-actions .action-btn.primary {
  background-color: var(--theme-color);
  color: #ffffff;
  border-color: var(--theme-color);
}
.booking-list .booking-item .booking-footer .booking-actions .action-btn:active {
  opacity: 0.8;
}
.course-deleted-tag {
  display: inline-block;
  background-color: #ff4d4f;
  color: #fff;
  padding: 1px 5px;
  border-radius: 4px;
  font-size: 10px;
  margin-top: 5px;
}
.auto-cancel-tag {
  display: inline-block;
  background-color: #ff4d4f;
  color: #fff;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 11px;
  margin-top: 5px;
  font-weight: bold;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  -webkit-animation: fadeIn 0.3s ease-in-out;
          animation: fadeIn 0.3s ease-in-out;
}
@-webkit-keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
@keyframes fadeIn {
from {
    opacity: 0;
}
to {
    opacity: 1;
}
}
/* 支付倒计时样式 */
.payment-countdown {
  background-color: rgba(255, 87, 51, 0.1);
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin: 10rpx 0;
  display: inline-block;
}
.payment-countdown .countdown-label {
  font-size: 24rpx;
  color: #FF5733;
}
.payment-countdown .countdown-time {
  font-size: 26rpx;
  color: #FF5733;
  font-weight: bold;
}
.booking-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  text-align: center;
  white-space: nowrap;
  display: inline-block;
}
.booking-status.status-pending {
  background-color: #FFF3E0;
  color: #FF9800;
}
.booking-status.status-confirmed, .booking-status.status-confirmed_unpaid {
  background-color: #E0F7FA;
  color: #00BCD4;
}
.booking-status.status-finished {
  background-color: #E8F5E9;
  color: #4CAF50;
}
.booking-status.status-cancelled, .booking-status.status-cancel {
  background-color: #EEEEEE;
  color: #9E9E9E;
}
.detail-row.teacher-row {
  background-color: rgba(255, 107, 0, 0.08);
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  margin: 8rpx 0;
}
.detail-row.teacher-row .teacher-name {
  color: #FF6B00;
  font-weight: 500;
}
