.uni-content {
  padding: 0 60rpx;
}
.login-logo {
  display: none;
}
@media screen and (min-width: 690px) {
.uni-content {
    padding: 0;
    max-width: 300px;
    margin-left: calc(50% - 200px);
}
}
.uni-content view {
  box-sizing: border-box;
}
.title {
  display: flex;
  padding: 18px 0;
  font-weight: 800;
  flex-direction: column;
}
.tip {
  display: flex;
  color: #BDBDC0;
  font-size: 11px;
  margin: 6px 0;
}
.uni-content  .uni-easyinput__content,
.input-box {
  height: 44px;
  background-color: #F8F8F8 !important;
  border-radius: 0;
  font-size: 14px;
  display: flex;
  flex: 1;
}
.link {
  color: #04498c;
  cursor: pointer;
}
.uni-content  .uni-forms-item__inner {
  padding-bottom: 8px;
}
.uni-btn {
  text-align: center;
  height: 40px;
  line-height: 40px;
  margin: 15px 0 10px 0;
  color: #FFF !important;
  border-radius: 5px;
  font-size: 16px;
}
.uni-body.uni_modules-uni-id-pages-pages-login-login-withoutpwd {
  height: auto !important;
}
@media screen and (max-width: 690px) {
.uni-content {
    margin-top: 15px;
    height: 100%;
    background-color: #fff;
}
}
@media screen and (min-width: 690px) {
.uni-content {
    padding: 30px 40px 60px;
    max-height: 530px;
}
.link-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 10px;
}
.link {
    font-size: 12px;
}
}
.uni-content  .uni-forms-item__label {
  position: absolute;
  left: -15px;
}
button {
  margin-top: 15px;
