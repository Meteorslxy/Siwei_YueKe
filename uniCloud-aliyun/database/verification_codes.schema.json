{
  "bsonType": "object",
  "required": ["phoneNumber", "code"],
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "phoneNumber": {
      "bsonType": "string",
      "description": "手机号码"
    },
    "code": {
      "bsonType": "string",
      "description": "验证码"
    },
    "createTime": {
      "bsonType": "timestamp",
      "description": "创建时间"
    },
    "updateTime": {
      "bsonType": "timestamp",
      "description": "更新时间"
    },
    "expiresAt": {
      "bsonType": "timestamp",
      "description": "过期时间"
    },
    "status": {
      "bsonType": "int",
      "description": "状态：0-未使用，1-已使用",
      "defaultValue": 0
    },
    "platform": {
      "bsonType": "string",
      "description": "平台"
    },
    "appid": {
      "bsonType": "string",
      "description": "应用ID"
    },
    "ip": {
      "bsonType": "string",
      "description": "IP地址"
    }
  }
} 